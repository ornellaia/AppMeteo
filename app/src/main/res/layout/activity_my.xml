<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity"
    android:id="@+id/activity_my"
    android:background="#96B4E4">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/location"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/temperatura"
        android:id="@+id/temperature"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:layout_alignTop="@+id/location"
        android:autoText="false"
        android:textColor="#ffff9539"
        android:textIsSelectable="false"
        android:textSize="40sp" />

    <view class="com.example.ornella.appmeteo.WebImageView"
        android:id="@+id/immagine_meteo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="false"
        android:layout_alignRight="@+id/temperature"
        android:layout_alignEnd="@+id/temperature"
        android:layout_centerVertical="true" />

</RelativeLayout>
